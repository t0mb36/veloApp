# =============================================================================
# VeloApp Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_USER=velo
POSTGRES_PASSWORD=velopassword
POSTGRES_DB=velodb

# -----------------------------------------------------------------------------
# Backend Configuration (FastAPI)
# -----------------------------------------------------------------------------
APP_NAME=VeloApp API
DEBUG=true
API_PREFIX=/api

# CORS origins - comma-separated list
CORS_ORIGINS=http://localhost:3000

# -----------------------------------------------------------------------------
# Firebase Authentication (Backend - Admin SDK)
# -----------------------------------------------------------------------------
# Get these from Firebase Console > Project Settings > Service Accounts
# Click "Generate new private key" and copy values from the JSON file

FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
# Private key with newlines escaped as \n
FIREBASE_PRIVATE_KEY=

# Session cookie expiry in days
SESSION_COOKIE_EXPIRY_DAYS=7

# -----------------------------------------------------------------------------
# Firebase Authentication (Frontend - Client SDK)
# -----------------------------------------------------------------------------
# Get these from Firebase Console > Project Settings > General > Your apps
# These are public and safe to expose in client-side code

NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=

# -----------------------------------------------------------------------------
# Service URLs
# -----------------------------------------------------------------------------
# Backend URL for Next.js API routes (server-side proxy to FastAPI)
BACKEND_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# Service Ports (for Docker)
# -----------------------------------------------------------------------------
FRONTEND_PORT=3000
BACKEND_PORT=8000
