# =============================================================================
# VeloApp Environment Configuration
# =============================================================================
# Copy this file to .env and update the values as needed
# DO NOT commit .env to version control

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_USER=velo
POSTGRES_PASSWORD=velopassword
POSTGRES_DB=velodb

# -----------------------------------------------------------------------------
# Backend Configuration
# -----------------------------------------------------------------------------
APP_NAME=VeloApp API
DEBUG=false
API_PREFIX=/api

# CORS Settings - JSON array of allowed origins
CORS_ORIGINS=["http://localhost:3000"]

# -----------------------------------------------------------------------------
# Service Ports
# -----------------------------------------------------------------------------
FRONTEND_PORT=3000
BACKEND_PORT=8000

# -----------------------------------------------------------------------------
# Frontend Configuration (used in development)
# -----------------------------------------------------------------------------
VITE_API_URL=http://localhost:8000
